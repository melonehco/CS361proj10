class Professor
{
	String[] classes;
	
	String getClass(int i)
	{
		return this.classes[i];
	}
}

class Dale extends Professor
{
	void shiverWithJoy()
	{
		{
		
		}
		
		return;
	}
	
	int shudderWithRevulsion()
	{
		return 42 + 42 - 42;
	}
	
	String refactor(String oldCode)
	{
		var elegant = false;
		var newCode = "";
		
		shudderWithRevulsion();
		
		while (!elegant)
		{
			newCode = oldCode + "improvements";
		}
	
		return newCode;
	}
}

